<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head'); -%>
  <link rel="stylesheet" href="/javascripts/select2/css/select2.css">
</head>
<body class="hold-transition skin-green sidebar-mini">
  <div class="wrapper">
  <header class="main-header">
    <%- include('partials/header'); -%>
  </header>
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar">
    <%- include('partials/sidebar'); -%>
  </aside>
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Categor√≠as
      </h1>
      <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i> Index</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-4">
                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <i class="ion ion-clipboard"></i>
                        <h3 class="box-title">Categorias</h3>
                    </div>
                    <div class="box-body" style="overflow-y: auto; max-height: 252px;" data-example-id="list-group-btns">
                        <div class="list-group">
                            <% categories.forEach(function(item) { %>
                                  <a href="#" onclick="editCategory(<%=item.IdCategory%>)" class="list-group-item">
                                    <input type="hidden" name="name_category" id="name_category_<%=item.IdCategory%>" value="<%=item.Name%>">
                                    <%= item.Name %>
                                    <span class="glyphicon glyphicon-remove pull-right" onclick="deleteCategory(<%=item.IdCategory%>)" ></span>
                                </a>
                                <% }); %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <i class="ion ion-clipboard"></i>
                        <h3 class="box-title">Nueva Categoria</h3>
                    </div>
                    <div class="box-body row" style="overflow-y: auto; max-height: 252px;">
                           <div class="col-md-12">
                               <input type="text" class="form-control" id="Category_Name" name="Category_Name" value=""> 
                               <input type="hidden" name="id_category" id="id_category" value="">
                           </div>
                           <hr/>
                           <div class="col-md-12">
                            <button type="button" onclick="clearForm()" class="btn btn-default pull-left">Clear</button>                
                            <button type="button" onclick="submitForm()" class="btn btn-info pull-right">Guardar</button>                
                            </div>
                       </div>
                </div>
            </div>
            
            
        

        </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

 <!-- Main Footer -->
  <footer class="main-footer">
    <%- include('partials/footer'); -%>
  </footer>
</div>
 
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script>
        window.jQuery || document.write('<script src="javascripts/jquery-1.11.0.min.js"><\/script>')
    </script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<!-- AdminLTE App -->
    <script src="/AdminLTE/js/adminlte.min.js"></script>
    <script src="/AdminLTE/js/categories.js"></script>
    <script src="/AdminLTE/js/jquery.geocomplete.js"></script>
    <script src="/AdminLTE/js/jquery.geocomplete.min.js"></script>
    <script src="/javascripts/select2/js/select2.min.js"></script>
    <script src="https://maps.google.com/maps/api/js?libraries=places&key=AIzaSyACKCmiFSETqUlePLoEjdiDAv3huM58KJU"></script>

</body>
</html>